<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{{ args.project_name }} Generators</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
    <style>
        body {
            padding: 2rem;
            max-width: 60rem;
            margin: 0 auto;
        }
    </style>
</head>
<body>
<h1 class="mb-3">{{ args.project_name }}</h1>

<p class="text-muted">Select a model generator:</p>

<div class="list-group mb-4">
    {% for g in generators %}
        <a class="list-group-item list-group-item-action" href="{{ g.link }}">{{ g.label }}</a>
    {% endfor %}
</div>

<p>
    Project: <a href="{{ args.project_uri }}">{{ args.project_uri }}</a>
</p>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI"
        crossorigin="anonymous"></script>
</body>
</html>
